<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="15dp"

    >


    <ImageView
        android:id="@+id/concert_img"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/testimage" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/concert_img"
        android:background="#bb030420"
        android:paddingBottom="3dp"
        android:id="@+id/concert_date"
        android:paddingLeft="5dp"
        android:paddingTop="3dp"
        android:text="26 iyun - 19:00"
        android:textColor="#fff"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/concert_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/concert_img"
        android:maxLength="30"
        android:paddingLeft="10dp"
        android:text="AVENGERS: AGE OF ULTRON"
        android:textColor="#ffd27500"
        android:textSize="13sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_below="@+id/concert_name"
        android:layout_toRightOf="@+id/concert_img"
        android:maxLines="5"
        android:id="@+id/concert_desc"
        android:paddingLeft="10dp"
        android:text="Heydər Əliyev Sarayının və Azərbaycan Aşıqlar Cəmiyyətinin dəstəyilə 25 iyun 19:00-da aşıqlar konserti keçiriləcək. Biletlərin qiyməti: 10-40 AZN. Biletləri şəhərin kassalarından əldə etmək olar."
        android:textSize="12sp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/concert_img"
        android:id="@+id/concert_seperator"
        android:background="#aaa" />

</RelativeLayout>